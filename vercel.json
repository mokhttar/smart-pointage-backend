{
  "version": 2,
  "functions": {
    "dist/index.js": {
      "includeFiles": "prisma/**"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/index.js"
    }
  ],
  "env": {
    "DATABASE_URL": "file:./dev.db",
    "JWT_SECRET": "your-super-secret-jwt-key-change-this-in-production",
    "PORT": "3001",
    "UPLOAD_DIR": "uploads"
  }
}
